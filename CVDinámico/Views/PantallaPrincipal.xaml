<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CVDinámico.PantallaPrincipal"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <Grid>
            <StackLayout VerticalOptions="Center"
                         Spacing="5"
                         Margin="20">

                <Label Text="CV"
                       FontSize="Header"
                       HorizontalOptions="Center"/>

                <Label Text="Nombre*"
                       FontSize="Large"/>

                <Frame HasShadow="False"
                       CornerRadius="15"
                       Padding=" 10, 0, 10, 0">

                    <Entry Keyboard="Default"
                           Placeholder="nombre"
                           PlaceholderColor="Gray"
                           TextColor="Black"
                           FontSize="Large"
                           Text="{Binding FirstName}"/>

                </Frame>

                <Label Text="Apellido(s)*"
                       FontSize="Large"/>

                <Frame HasShadow="False"
                       CornerRadius="15"
                       Padding=" 10, 0, 10, 0">

                    <Entry Keyboard="Default"
                           Placeholder="Apellidos"
                           PlaceholderColor="Gray"
                           TextColor="Black"
                           FontSize="Large" 
                           Text="{Binding LastName}"/>

                </Frame>

                <Label Text="Fecha de Nacimiento*"
                       FontSize="Large"/>

                <DatePicker Date="{Binding BirthDay}"/>
                
                <Label Text="Ocupación*"
                       FontSize="Large"/>

                <Frame HasShadow="False"
                        CornerRadius="15"
                        Padding=" 10, 0, 10, 0">

                    <Entry Keyboard="Default"
                           Placeholder="Ocupación"
                           PlaceholderColor="Gray"
                           TextColor="Black"
                           FontSize="Large" 
                           Text="{Binding Ocupation}"/>

                </Frame>

                <Label Text="Teléfono*"
                       FontSize="Large"/>

                <Frame HasShadow="False"
                        CornerRadius="15"
                        Padding=" 10, 0, 10, 0">

                    <Entry Keyboard="Numeric"
                           Placeholder="Teléfono"
                           PlaceholderColor="Gray"
                           TextColor="Black"
                           FontSize="Large" 
                           Text="{Binding Phone}"/>

                </Frame>

                <Label Text="Email*"
                       FontSize="Large"/>

                <Frame HasShadow="False"
                        CornerRadius="15"
                        Padding=" 10, 0, 10, 0">

                    <Entry Keyboard="Email"
                           Placeholder="Email"
                           PlaceholderColor="Gray"
                           TextColor="Black"
                           FontSize="Large" 
                           Text="{Binding Email}"/>

                </Frame>

                <Button Text="Enviar"
                        CornerRadius="10"
                        FontSize="Large"
                        FontAttributes="Bold"
                        Margin="0,20,0,0"
                        BackgroundColor="SkyBlue"
                        TextColor="Black"
                        Command="{Binding AsynchProcessCommand}"/>
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>